<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">
    <android.support.v7.widget.Toolbar
        android:id="@+id/first_tb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <Button
            android:paddingLeft="30dp"
            android:id="@+id/button"
            android:layout_height="20dp"
            android:background="@drawable/saoyisao"
            android:layout_width="20dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:button="@null"
            />
        <TextView
            android:id="@+id/tobaText"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_button"
            android:contextClickable="true"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick"
            android:text="想要搜索：商品/货号"
            android:drawableLeft="@drawable/abs__ic_search_api_holo_light"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbfbfb"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.0"
            android:background="#f4f4f4"
            android:scrollbars="none" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="#ffffffff"></View>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36.0" />
    </LinearLayout>

</LinearLayout>