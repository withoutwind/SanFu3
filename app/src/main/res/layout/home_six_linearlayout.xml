<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
   android:layout_height="543dp">
   <LinearLayout
       android:id="@+id/home_six_linearlayout_1"
       android:layout_weight="1"
       android:layout_height="540dp"
       android:layout_width="wrap_content"

       android:orientation="vertical">
       <ImageView
           android:id="@+id/home_six_linearlayout_1_imageview1"
           android:layout_height="290dp"
           android:layout_width="match_parent"
           android:scaleType="fitXY"/>
       <ImageView
           android:paddingTop="3dp"
           android:id="@+id/home_six_linearlayout_1_imageview2"
           android:layout_height="250dp"
           android:layout_width="match_parent"
           android:scaleType="fitXY"
            />
       </LinearLayout>
    <LinearLayout
       android:id="@+id/home_six_linearlayout_2"
       android:layout_weight="1"
        android:paddingLeft="3dp"
       android:layout_height="540dp"
       android:layout_width="wrap_content"
       android:orientation="vertical">
       <ImageView
           android:id="@+id/home_six_linearlayout_1_imageview3"
           android:layout_height="250dp"
           android:scaleType="fitXY"
           android:layout_width="match_parent"
           />
       <ImageView
           android:paddingTop="3dp"
           android:id="@+id/home_six_linearlayout_1_imageview4"
           android:layout_height="290dp"
           android:scaleType="fitXY"
           android:layout_width="match_parent"/>
       </LinearLayout>

</LinearLayout>